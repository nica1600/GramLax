@model List<GrammatikLaxen.Models.FragaSvar>
@{
    ViewBag.Title = "Prov";
}
<div class="jumbotron">
    <h1>Prov</h1>
    <p class="lead">Välj vilken typ av prov du vill skapa eller gå tillbaka till startsidan.</p>
    <div class="col-md-12 row">
        <div class="col-md-6 text-center">
            <a href="@Url.Action("Index", "Home")" class="btn btn-default btn-block btn-lg">&laquo; Tillbaka</a>
        </div>
        <div class="col-md-6 text-center">
            <a id="mer-info-provniva" class="btn btn-primary btn-block btn-lg" data-toggle="collapse" href="#provinfo" role="button" aria-expanded="false" aria-controls="provinfo">Mer info &raquo;</a>
        </div>
    </div>
    <div class="collapse" id="provinfo">
        <div class="card card-body">
            @Html.Partial("_ProvInfo")
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 text-center">
        <h2>Provnivå: 1</h2>
        <p><a href="@Url.Action("Niva1", "Prov")" class="btn btn-success btn-block btn-lg">Generera prov &raquo;</a></p>
        <p><a href="@Url.Action("Niva1Pdf", "Prov")" target="_blank" class="btn-lg">Generera prov till PDF &raquo;</a></p>
        <h4>
            Provet består av 15 lätta frågor från blandade ordklasser.<br /><br />
        </h4>
    </div>
    <div class="col-md-4 text-center">
        <h2>Provnivå: 2</h2>
        <p><a href="@Url.Action("Niva2", "Prov")" class="btn btn-warning btn-block btn-lg">Generera prov &raquo;</a></p>
        <p><a href="@Url.Action("Niva2Pdf", "Prov")" target="_blank" class="btn-lg">Generera prov till PDF &raquo;</a></p>
        <h4>
            Provet består av 8 lätta och 7 medelsvåra frågor från blandade ordklasser.
        </h4>
    </div>
    <div class="col-md-4 text-center">
        <h2>Provnivå: 3</h2>
        <p><a href="@Url.Action("Niva3", "Prov")" class="btn btn-danger btn-block btn-lg">Generera prov &raquo;</a></p>
        <p><a href="@Url.Action("Niva3Pdf", "Prov")" target="_blank" class="btn-lg">Generera prov till PDF &raquo;</a></p>
        <h4>
            Provet består av 6 lätta, 5 medelsvåra och 4 svåra frågor från blandade ordklasser.
        </h4>
    </div>
</div>

<script>
    $('#mer-info-provniva').click(function () { 
        $(this).text(function (i, old) {
            return old == 'Dölj info »' ? 'Mer info »' : 'Dölj info »';
        });
    });
</script>