    $('#mer-info-rts-adverb').click(function () {
        $(this).text(function (i, old) {
            return old == 'Nivå 1: RTS -' ? 'Nivå 1: RTS +' : 'Nivå 1: RTS -';
        });
    });

    $('#mer-info-gors-adverb').click(function () {
        $(this).text(function (i, old) {
            return old == 'Nivå 2: GORS -' ? 'Nivå 2: GORS +' : 'Nivå 2: GORS -';
        });
    });
</script>