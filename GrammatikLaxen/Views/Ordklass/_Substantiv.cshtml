        $(this).text(function (i, old) {
            return old == 'Nivå 3: Numerus (singular och plural) -' ? 'Nivå 3: Numerus (singular och plural) +' : 'Nivå 3: Numerus (singular och plural) -';
        });
    });

    $('#mer-info-obe-bes').click(function () {
        $(this).text(function (i, old) {
            return old == 'Nivå 3: Obestämd och bestämd -' ? 'Nivå 3: Obestämd och bestämd +' : 'Nivå 3: Obestämd och bestämd -';
