    $('#mer-info-fri').click(function () {
        $(this).text(function (i, old) {
            return old == 'Nivå 3: Bestämd fristående artikel -' ? 'Nivå 3: Bestämd fristående artikel +' : 'Nivå 3: Bestämd fristående artikel -';
