        });
    });

    $('#mer-info-kasus').click(function () {
        $(this).text(function (i, old) {
            return old == 'Nivå 2: Kasus (nominativ och genitiv) -' ? 'Nivå 2: Kasus (nominativ och genitiv) +' : 'Nivå 2: Kasus (nominativ och genitiv) -';
