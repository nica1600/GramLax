<script>
    var raknare = -1;
    
    $('#nastaFraga').click(function () {
        raknare++;

        $(this).text(function () {
            return "Nästa fråga »";
        });

        $('#nastaFraga').removeClass("btn-primary");
        $('#nastaFraga').addClass("btn-default");

        $('#dittSvar').text(function () {
            return "Ditt svar:";
        });
        $('#rattSvar').addClass("hidden");
        $('#rattSvarTom').removeClass("hidden");

        $.get('@Url.Action("LaddaSpelet", "Spel")', {}, function (response) {
            $("#fragan").html(response);
        });

        $('#rakna').text(function () {
            return "Antal besvarade frågor: " + raknare;
        });
    });


