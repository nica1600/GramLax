    $('#svara').click(function () {
        var svaret = document.getElementById("svar").value;

        $('#dittSvar').text(function () {
            return "Ditt svar: " + svaret;
        });

        $('#rattSvarTom').addClass("hidden");
        $('#rattSvar').removeClass("hidden");
    });
</script>